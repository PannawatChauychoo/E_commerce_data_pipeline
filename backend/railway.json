{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "uv sync --frozen && python manage.py collectstatic --noinput && python manage.py migrate",
    "watchPatterns": [
      "**/*.py",
      "requirements.txt",
      "pyproject.toml"
    ]
  },
  "deploy": {
    "startCommand": "gunicorn rest_api.wsgi:application --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/api/health/",
    "healthcheckTimeout": 300
  }
}